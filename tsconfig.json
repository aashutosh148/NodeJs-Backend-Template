{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "types": [
            "node",
            "jest"
        ],
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*",
        "src/swagger-output.json"
    ],
    "exclude": [
        "src/**/*.spec.ts"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
}